<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="be.helha.projet.activity.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:orientation="vertical" >
    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Movies"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main_listMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"/>

    <TextView
        android:id="@+id/tv_tvSeries_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TV Series"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_main_listTVSeries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"/>

        <TextView
        android:id="@+id/tv_actor_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actor"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_main_listActor"
        android:overScrollMode="never"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>
